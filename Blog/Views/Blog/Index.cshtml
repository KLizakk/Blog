@model IEnumerable<Blog.Models.BlogPost>

<h1>Blog Posts</h1>

<p>
    <a asp-controller="Blog" asp-action="Create" class="btn btn-primary">Add New Post</a>
</p>

@if (Model != null && Model.Any())
{
    foreach (var post in Model)
    {
        <div class="post-summary">
            <h2>@post.Title</h2>
            <p>@post.Content</p>
            <p>
                <small>Author: @post.Author, Created At: @post.CreatedAt</small>
                <br />
                <small>@(post.Comments != null ? post.Comments.Count : 0) comments</small>
            </p>
            <p>
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" class="btn btn-info">View Details</a>
            </p>
        </div>
        <hr />
    }
}
else
{
    <p>No blog posts available.</p>
}
