@model IEnumerable<Blog.Models.BlogPost>

<div class="container mt-5">
    <h1 class="mb-4">Blog</h1>

    <p>
        <a asp-controller="Blog" asp-action="Create" class="btn btn-success mb-4">Add New Post</a>
    </p>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var post in Model)
            {
                <div class="list-group-item mb-3 p-4">
                    <h2 class="h5 mb-2">@post.Title</h2>
                    <p class="mb-1 text-muted small">Author: @post.Author | Created At: @post.CreatedAt.ToString("MMMM dd, yyyy")</p>
                    <p class="mb-3">@post.Content</p>
                    <p class="mb-1 text-muted small">Comments: @(post.Comments?.Count ?? 0)</p>
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" class="btn btn-info btn-sm mt-2">View Details</a>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No blog posts available.</p>
    }
</div>
